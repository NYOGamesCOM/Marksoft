<%- include("partials/head", { bot, user, path, description, title: "Marksoft - Premium",  url, image }) %>  
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Montserrat:200,300,400,600,700'>
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.5.0/css/all.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(to right, #1c1c1d, #464646);
            color: #61dafb;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }
        .stats {
            text-align: center;
            margin-bottom: 2rem;
        }
        .stats h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        .stats p {
            font-size: 1.5rem;
            margin: 0.5rem 0;
        }
        canvas {
            margin-top: 2rem;
            max-width: 800px; /* Adjust the max-width as needed */
            width: 100%; /* Ensure the canvas fills its container */
            height: auto; /* Maintain aspect ratio */
        }
        .guild-list {
            text-align: left;
            width: 90%;
            max-width: 600px;
            margin-top: 2rem;
        }
        .guild-item {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap; /* Allow wrapping on smaller screens */
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }
        .guild-name {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="stats">
        <h1 >Marksoft Statistics</h1>
        <p style="font-size: 13px; text-shadow: 0 0 5px rgba(168, 168, 168, 0.466), 0 0 10px rgba(255, 0, 0, 0.7), 0 0 15px rgb(255, 23, 6);">
            Serving <b><%= bot.guilds.cache.reduce((a, g) => a + g.memberCount, 0) %></b> members in 
            <b><%= bot.guilds.cache.size %> guilds</b> servers.
          </p>
          
          
        <canvas id="botStatsChart"></canvas>
    </div>

    <div class="guild-list">
        <h2 style="text-align: center;">Discord servers using Marksoft</h2>

        <% bot.guilds.cache.forEach(guild => { %>
            <div class="guild-item">          
                <span class="guild-name"><%= guild.name %></span>
                <span><%= guild.memberCount %> members</span>
            </div>
        <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('botStatsChart').getContext('2d');
        const botStatsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Members', 'Servers'],
                datasets: [
                {
                    label: 'Members',
                    data: [0, <%= bot.guilds.cache.reduce((a, g) => a + g.memberCount, 0) %>],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                },
                {
                    label: 'Servers',
                    data: [0, <%= bot.guilds.cache.size %>],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script> 
</body>