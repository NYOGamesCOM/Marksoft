
<%- include("partials/head", { bot, user, path, title: "Marksoft - Redeem" }) %>
<link rel="icon"
    type="image/png"
    href="<%domain%>/logo.png">
    <body>
  
  <% if(!alert && settings.isPremium === "true") { %>
   <div class="container-contact">
            <div class="wrap-contact">
                
                    <span class="contact-form-title">Already Premium</span>
                    <h4><%= guild.name %> Is already a premium guild.</h4>

</div>
</div>
  <% } else { %>
    <div class="container">
        <br><br><br><br><br>
        <h1>Redeem Premium Code</h1>
        <form action="/redeem/<%= guild.id %>" method="POST">
            <label for="code">Enter Premium Code:</label>
            <input type="text" id="code" name="code" required>
            <button type="submit">Redeem</button>
        </form>

        <% if (alert) { %>
            <div class="alert">
                <p><%= alert %></p>
            </div>
        <% } %>

        <% if (result) { %>
            <div class="result <%= result.success ? 'success' : 'error' %>">
                <p><%= result.success ? "✅ " : "❌ " %><%= result.message %></p>
            </div>
        <% } %>

        <div class="guild-info">
            <h2>Guild Information</h2>
            <p><strong>Guild Name:</strong> <%= guild.name %></p>
            <p><strong>Guild ID:</strong> <%= guild.id %></p>
        </div>
    </div>
 <% } %>
</html>

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f4f4f9;
        font-family: Arial, sans-serif;
    }
    .container {
        text-align: center;
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
    }
    h1 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
    }
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    label {
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 16px;
        color: #333;
    }
    input[type="text"] {
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        width: calc(100% - 20px); /* Ensure it fits inside the container */
    }
    button {
        padding: 10px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        width: 100%; /* Full width button */
    }
    button:hover {
        background-color: #45a049;
    }
    .alert, .result {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }
    .alert {
        background-color: #ffdddd;
        border: 1px solid #f44336;
        color: #f44336;
    }
    .result.success {
        background-color: #ddffdd;
        border: 1px solid #4caf50;
        color: #4caf50;
    }
    .result.error {
        background-color: #ffdddd;
        border: 1px solid #f44336;
        color: #f44336;
    }
    .guild-info {
        margin-top: 30px;
        text-align: left;
        font-size: 14px;
        color: #333;
    }
    .guild-info p {
        margin: 5px 0;
    }
</style>
<%- include("partials/footer") %>